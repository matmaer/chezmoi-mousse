{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TMUXP Chezmoi",
            "type": "shell",
            "command": "tmuxp load ${workspaceFolder:chezmoi-mousse}/.vscode/tmuxp.yaml",
            "dependsOn": "kill tmux server",
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder:chezmoi-mousse}/src/"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "problemMatcher": []
        },
        {
            "label": "CSS Chezmoi",
            "type": "shell",
            "command": "textual run --dev ${workspaceFolder:chezmoi-mousse}/src/chezmoi_tui.py",
            "runOptions": {
                "instanceLimit": 1
            },
            "problemMatcher": []
        },
        {
            "label": "kill tmux server",
            "hide": true,
            "type": "shell",
            "command": "tmux kill-server || exit 0",
            "dependsOrder": "sequence"
        },
    ]
}


