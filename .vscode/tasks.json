{
    "version": "2.0.0",
    "command": "/bin/sh",
    "options": {
        "cwd": "${workspaceFolder:chezmoi-mousse}"
    },
    "tasks": [
        {
            "label": "ipython console",
            "type": "shell",
            "command": "ipython",
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "TEXTUAL TCSS",
            "type": "shell",
            "command": "source ${workspaceFolder:chezmoi-mousse}/.venv/bin/activate && textual run --dev chezmoi_mousse.tui:ChezmoiTUI",
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "TEXTUAL CONSOLE",
            "type": "shell",
            "command": "source .venv/bin/activate; textual run --dev chezmoi_mousse.tui:ChezmoiTUI",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
