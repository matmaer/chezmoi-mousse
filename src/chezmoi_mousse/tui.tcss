.dir-tree {
  margin-left: 1;
  & > .directory-tree--folder {
    color: $primary-lighten-3;
    text-style: none;
  }
  & > .directory-tree--extension {
    text-style: none;
  }
  & > .directory-tree--hidden {
    color: $accent-lighten-3;
    text-style: none;
  }
  & > .directory-tree--file {
    color: $success-lighten-3;
    text-style: none;
  }
}

Tree {
  min-height: 3;
  padding-left: 1;
  & > .tree--cursor {
    text-style: none;
    color: $accent-lighten-3;
  }
  & > .tree--highlight-line {
    text-style: none;
  }
  & > .tree--highlight {
    text-style: none;
    color: $accent-lighten-3;
  }
  & > .tree--guides {
    color: $primary-lighten-3;
  }
  & > .tree--guides-hover {
    color: $primary-lighten-3;
  }
  & > .tree--guides-selected {
    color: $primary-lighten-3;
  }
  &:focus {
    & > .tree--guides {
      color: $primary-lighten-3;
    }
    & > .tree--guides-hover {
      color: $primary-lighten-3;
    }
    & > .tree--guides-selected {
      color: $primary-lighten-3;
    }
  }
}

SlideBar {
  background-tint: $background-lighten-1;
  background: $background-lighten-1;
  border-bottom: inner $primary-muted;
  border-left: inner $primary-muted;
  border-right: none;
  border-title-color: $primary;
  border-top: inner $primary-muted;
  dock: right;
  height: auto;
  layer: slidebar_layer;
  width: auto;
  margin: 7 0 3 14;
  /* max-width to keep the switches in view, labels overflow first */
  max-width: 1fr;
  /* offset-x: 100%; out if view if docked right */
  offset-x: 100%;
  padding-top: 1;
  transition: offset 380ms;

  .filter-container {
    background-tint: $background-lighten-1;
    background: $background-lighten-1;
    height: auto;
    width: auto;
  }

  .filter-switch {
    background-tint: $background-lighten-1;
    border: none;
    &.-on .switch--slider {
      border: none;
      color: $success;
    }
    & .switch--slider {
      border: none;
      color: $error-darken-3;
    }
    &:hover {
      & > .switch--slider {
        color: $error-darken-2;
      }
      &.-on > .switch--slider {
        color: $success-lighten-1;
      }
    }
    &:focus {}
  }
  .filter-label {
    padding-bottom: 1;
    padding-right: 1;
  }
  .filter-tooltip {
    padding-right: 2;
    color: $primary;
  }
  &.-visible {
  offset-x: 0%;
  }
}

