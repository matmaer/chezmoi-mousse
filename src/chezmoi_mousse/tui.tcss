* {
  scrollbar-size-vertical: 1;
  background-tint: #000000;
}

#diagram {
  margin-left: 1;
  margin-right: 1;
  min-width: 76;
}

#tree-checkbox {
  border: none;
  & > .toggle--label {
    color: $primary-muted;
  }
  & > .toggle--button {
    color: $primary-muted;
  }
  &.-on > .toggle--button {
    color: $primary;
  }
  &.-on > .toggle--label {
    color: $primary;
  }
  &:hover {
    text-style: bold;
  }
  &:focus > .toggle--label {
    text-style: none;
  }
}

#doctortable {
  height: 70%;
}

Label {
  &.muted {
      color: $text-muted;
  }
}

Screen {
  layers: slidebar_layer;
}

Header {
  color: $primary;
  HeaderIcon {
    /* with display: none; the title is not centered */
    visibility: hidden;
  }
}

Footer {
  .-command-palette {
    border: none;
  }
}

ChezmoiStatus {
  padding-left: 1;
  height: auto;
  margin-bottom: 1;
}

Collapsible {
  border: none;
  padding: 0;
}

CollapsibleTitle {
  border: none;
  padding: 0;
  color: $primary;
  &:hover {
    text-style: bold;
  }
}

DataTable {
  height: auto;
  width: 100%;
  padding-right: 1;
  & > .datatable--header {
    color: $secondary;
    text-style: bold underline;
  }
  & > .datatable--cursor {
    color: $accent;
    text-style: none;
  }
  & > .datatable--hover {
    color: $secondary;
    text-style: bold;
  }
  & > .datatable--fixed {}
  & > .datatable--fixed-cursor {}
  & > .datatable--header-cursor {}
  & > .datatable--header-hover {}
  & > .datatable--odd-row {}
  & > .datatable--even-row {}
}

Tree {
  min-height: 3;
  color: $foreground;
  padding-left: 1;
  & > .tree--label {}
  & > .tree--guides {
      color: $secondary;
  }
  & > .tree--guides-hover {
      color: $secondary;
  }
  & > .tree--guides-selected {
      color: $secondary;
  }
  & > .tree--cursor {
      text-style: bold;
  }
  & > .tree--highlight {}
  & > .tree--highlight-line {
      text-style: bold;
  }
  &:focus {
      & > .tree--cursor {
          color: $block-cursor-foreground;
          text-style: bold;
      }
      & > .tree--guides {
          color: $secondary;
      }
      & > .tree--guides-hover {
          color: $secondary;
      }
      & > .tree--guides-selected {
          color: $secondary;
      }
  }
}

LoadingScreen {
  padding: 1 1 1 1;
  & #loader-log {
    margin: 1 0 1 0;
    color: $secondary;
    height: 11;
    width: auto;
  }
  & #continue {
    color: $accent;
    border: none;
    text-style: none;
  }
}

SlideBar {
  border-bottom: round $accent-muted;
  border-left: round $accent-muted;
  border-top: round $accent-muted;
  dock: right;
  height: 100%;
  layer: slidebar_layer;
  margin-bottom: 3;
  margin-top: 7;
  max-width: 80%;
  min-height: 5;
  /* offset-x: -100%; out of view if docked left */
  /* offset-x: 100%; out if view if docked right */
  offset-x: 100%;
  transition: offset 380ms;
  &.-visible {
      offset-x: 0%;
  }
}
