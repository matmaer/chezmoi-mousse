/* "finalized" tcss below */
/* ---------------------- */

ChezmoiStatus {
  padding-left: 1;
  height: auto;
  margin-bottom: 1;
}

Collapsible {
  border: none;
  padding: 0;

  CollapsibleTitle {
    border: none;
    padding: 0;
    color: $primary-lighten-1;
    &:hover {
      text-style: bold;
    }
  }
}

#doctortable {
  width: 100%;
  height: 1fr;
  padding-right: 1;
  & > .datatable--header {
    color: $foreground;
    text-style: none;
  }
}

LoadingScreen {
  & #loader-log {
    margin: 2 1 2 1;
    color: $secondary;
    height: 11;
    width: auto;
  }
  & #continue {
    color: $accent;
    border: none;
    text-style: none;
  }
}

#diagram {
  margin-left: 1;
  margin-right: 1;
  min-width: 76;
}

* {
  scrollbar-size-vertical: 1;
  background-tint: #000000;
}

Screen {
  layers: slidebar_layer;
}

Header {
  color: $primary;
  HeaderIcon {
    /* with display: none; the title is not centered */
    visibility: hidden;
  }
}

Footer {
  .-command-palette {
    border: none;
  }
}

/* not in use yet */

.tree-checkbox {
  border: round $accent-muted;
  & > .toggle--label {
    color: $error-darken-2;
  }
  & > .toggle--button {
    color: $error;
  }
  &.-on > .toggle--label {
    color: $success-darken-2;
  }
  &.-on > .toggle--button {
    color: $success;
  }
  &:focus > .toggle--label {
    text-style: none;
  }
  &:focus > .toggle--button {
    text-style: none;
  }
  &:hover > .toggle--label {
    text-style: bold;
  }
  &:hover > .toggle--button {
    text-style: bold;
  }
}
