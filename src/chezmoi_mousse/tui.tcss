/* DEFAULTS */

Tree, DirectoryTree, DataTable, VerticalScroll {
  scrollbar-size-vertical: 1;
}

.dir-tree {
  height: auto;
  margin-left: 1;
  & > .directory-tree--folder {
    color: $primary-lighten-3;
    text-style: none;
  }
  & > .directory-tree--extension {
    text-style: none;
  }
  & > .directory-tree--hidden {
    text-style: none;
  }
  & > .directory-tree--file {
    color: $success-lighten-3;
    text-style: none;
  }
}

.operationmodal {
  align: center middle;
  background-tint: $surface;
  background: $surface;
  border: thick $panel;
  height: auto;
  margin: 2 2 2 2;
  max-height: 1fr;
  max-width: 1fr;
  min-height: 7;
  width: auto;

  Button {
    background-tint: $surface;
    background: $surface;
    border-bottom: none;
    border-left: none;
    border-right: none;
    border-top: heavy $primary;
    color: $primary;
    content-align: center middle;
    height: auto;
    line-pad: 1;
    margin: 0 7 0 7;
    min-width: 8;
    text-align: center;
    text-style: none;
    text-style: none;
    width: 1fr;

    &:disabled {
      text-opacity: 0.6;
    }

    &:focus {
      background-tint: $surface;
      background: $surface;
      border-bottom: none;
      border-left: none;
      border-right: none;
      border-top: heavy $primary-lighten-2;
      text-style: none;
    }
    &:hover {
      background-tint: $surface;
      background: $surface;
      border-bottom: none;
      border-left: none;
      border-right: none;
      border-top: heavy $primary-lighten-3;
      color: $accent-lighten-3;
    }
    &.-active {
      background-tint: $surface;
      background: $surface;
      border-bottom: none;
      border-left: none;
      border-right: none;
      border-top: heavy $primary-lighten-2;
    }
  }

  Collapsible{
    background-tint: $surface;
    background: $surface;
    margin-left: -1;
    margin-right: 1;
    padding: 0;
    scrollbar-gutter: stable;
  }
  CollapsibleTitle {
    background-tint: $surface;
    background: $surface;
    padding-left: 2;
  }

  RichLog {
    padding: 0 0 0 1;
  }

  Horizontal {
    align: center bottom;
    dock: bottom;
    height: 3;
  }

  .autowarning {
    padding: 0 2 1 2;
  }
}

Tree {
  background-tint: $background;
  min-height: 3;
  padding-left: 1;
  & > .tree--cursor {
    text-style: none;
    color: $accent-lighten-3;
  }
  & > .tree--highlight-line {
    text-style: none;
  }
  & > .tree--highlight {
    text-style: bold;
  }
  & > .tree--guides {
    color: $primary-lighten-3;
  }
  & > .tree--guides-hover {
    color: $primary-lighten-3;
  }
  & > .tree--guides-selected {
    color: $primary-lighten-3;
  }
  &:focus {
    & > .tree--guides {
      color: $primary-lighten-3;
    }
    & > .tree--guides-hover {
      color: $primary-lighten-3;
    }
    & > .tree--guides-selected {
      color: $primary-lighten-3;
    }
  }
}

SlideBar {
  background-tint: $surface;
  background: $surface;
  border-bottom: inner $primary-muted;
  border-left: inner $primary-muted;
  border-right: none;
  border-title-color: $primary;
  border-top: inner $primary-muted;
  dock: right;
  height: auto;
  layer: slidebar_layer;
  margin: 7 0 3 14;
  padding-top: 1;
  width: auto;
  /* max-width to keep the switches in view, labels overflow first */
  max-width: 1fr;
  /* offset-x: 100%; out if view if docked right */
  offset-x: 100%;
  transition: offset 380ms;

  .filter-container {
    background-tint: $surface;
    background: $surface;
    height: auto;
    width: auto;
  }

  .filter-switch {
    background-tint: $surface;
    border: none;
    &.-on .switch--slider {
      border: none;
      color: $success;
    }
    & .switch--slider {
      border: none;
      color: $error-darken-3;
    }
    &:hover {
      & > .switch--slider {
        color: $error-darken-2;
      }
      &.-on > .switch--slider {
        color: $success-lighten-1;
      }
    }
    &:focus {}
  }
  .filter-label {
    padding-bottom: 1;
    padding-right: 1;
  }
  .filter-tooltip {
    padding-right: 2;
    color: $primary;
  }
  &.-visible {
  offset-x: 0%;
  }
}

.collapsible-defaults {
  border: none;
  padding: 0;
  CollapsibleTitle {
    color: $primary-lighten-3;
    &:hover {
      text-style: bold;
    }
  }
}

Toast {
  background: $surface;
  background-tint: $surface;
}

ChezmoiStatus {
  padding-left: 1;
  height: auto;
  margin-bottom: 1;
}

#doctortable {
  width: 100%;
  height: 1fr;
  & > .datatable--header {
    color: $foreground;
    text-style: none;
  }
}

TobbedContent {
  background-: $surface;
  background-tint: yellow;
}

Screen {
  layers: filters filesinfo cmd_output;
}

Header {
  background-tint: $background;
  color: $primary;
  HeaderIcon {
    /* with display: none; the title is not centered */
    visibility: hidden;
  }
}

Footer {
  background-tint: $background;
  .-command-palette {
    border: none;
  }
}

LoadingScreen {
  & #loader-log {
    color: $secondary;
    background: $background;
    background-tint: $background;
    height: 11;
    margin: 2 1 2 1;
    width: auto;
  }
  & #continue {
    border: none;
    color: $accent;
    text-style: none;
  }
}

.tree-checkbox {
  border: round $accent-muted;
  & > .toggle--label {
    color: $error-darken-2;
  }
  & > .toggle--button {
    color: $error;
  }
  &.-on > .toggle--label {
    color: $success-darken-2;
  }
  &.-on > .toggle--button {
    color: $success;
  }
  &:focus > .toggle--label {
    text-style: none;
  }
  &:focus > .toggle--button {
    text-style: none;
  }
  &:hover > .toggle--label {
    text-style: bold;
  }
  &:hover > .toggle--button {
    text-style: bold;
  }
}

#diagram {
  margin-left: 1;
  margin-right: 1;
  min-width: 76;
}
