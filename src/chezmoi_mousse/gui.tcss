/* todo: for background-tint: check alternative not to overwrite other themes */

* {
  background-tint: $background;
  scrollbar-size-vertical: 1;
  scrollbar-background: $background;
  scrollbar-background-active: $background;
  scrollbar-background-hover: $background;
  scrollbar-corner-color: $background;
}

AutoWarning {
  margin: 0 1 1 1;
  height: auto;
  dock: top;
}

ChezmoiAdd {
  background-tint: $surface;
  background: $surface;
  border: thick $panel;
  margin: 1 2 1 2;

  & .add-modal-button {
    border-top: heavy $primary;
    border-bottom: none;
    border-left: none;
    border-right: none;
    background-tint: $surface;
    background: $surface;
    color: $primary;
    margin: 0 7 0 7;
    width: 8;
    text-style: none;
    &:disabled {
      text-opacity: 0.6;
    }

    &:focus {
      border-top: heavy $primary-lighten-2;
    }

    &:hover {
      border-top: heavy $primary-lighten-3;
      color: $accent-lighten-3;
    }

    &.-active {
      border-top: heavy $primary-lighten-2;
    }
  }

  #button_container {
    height: 3;
    align: center bottom;
    dock: bottom;
  }

  & FileViewCollapsible {
    background-tint: $surface;
    background: $surface;
    margin-right: 2;
  }

  .file-preview {
    padding: 0;
    margin-right: 1;
    border: none;
  }
}

ChezmoiStatus {
  height: auto;
  max-height: 70%;
  padding-bottom: 1;
}

Collapsible {
  border: none;
  padding: 0;
  & Pretty,
  StaticDiff {
    margin-bottom: 1;
  }
}

CollapsibleTitle {
  padding-left: 1;
  color: $primary-lighten-3;
  &:hover {
    text-style: bold;
  }
}

Doctor {
  .doctortable {
    height: auto;
    margin-bottom: 1;
    &>.datatable--header {
      text-style: none;
    }
  }

  .collapsiblegroup {
    height: auto;
    margin-bottom: 1;
  }
}

Footer {
  height: 3;
  border-top: dashed $panel;
  border-bottom: dashed $panel;

  .-command-palette {
    border: none;
  }
}

Header {
  border-bottom: dashed $panel-lighten-1;
  color: $primary;
  height: 2;
  text-style: bold;
}

LoadingScreen {
  RichLog {
    color: $secondary;
    height: 12;
    margin: 2 1 2 1;
    width: auto;
  }

  & #continue {
    border: none;
    color: $accent;
    text-style: none;
  }
}

Screen {
  layers: slidebar_layer;
}

SlideBar {
  background-tint: $surface;
  background: $surface;
  border-bottom: inner $primary-muted;
  border-right: inner $primary-muted;
  border-left: none;
  border-title-color: $primary;
  border-top: inner $primary-muted;
  dock: bottom;
  height: auto;
  layer: slidebar_layer;
  padding-top: 1;
  width: auto;
  /* max-width to keep the switches in view, labels overflow first */
  max-width: 1fr;
  /* offset-x: -100%; out if view if docked left */
  offset-x: -100%;
  transition: offset 380ms;

  & VerticalGroup {
    width: auto;
  }

  .filter-container {
    background-tint: $surface;
    background: $surface;
    padding-left: 1;
    height: auto;
    width: auto;
  }

  .filter-switch {
    background-tint: $surface;
    border: none;

    &.-on .switch--slider {
      border: none;
      color: $success;
    }

    & .switch--slider {
      border: none;
      color: $error-darken-3;
    }

    &:hover {
      &>.switch--slider {
        color: $error-darken-2;
      }

      &.-on>.switch--slider {
        color: $success-lighten-1;
      }
    }
  }

  .filter-label {
    padding-bottom: 1;
    padding-right: 1;
    width: auto;
  }

  .filter-tooltip {
    padding-right: 2;
    color: $primary;
  }

  &.-visible {
    offset-x: 0%;
  }
}

StaticDiff {
  height: auto;
}

Toast {
  background: $surface;
  background-tint: $surface;
}

Tree {
  &>.tree--cursor {
    text-style: none;
    color: $accent-lighten-3;
  }

  &>.tree--highlight-line {
    text-style: none;
  }

  &>.tree--highlight {
    text-style: bold;
  }

  &>.tree--guides {
    color: $primary-lighten-3;
  }

  &>.tree--guides-hover {
    color: $primary-lighten-3;
  }

  &>.tree--guides-selected {
    color: $primary-lighten-3;
  }

  &:focus {
    &>.tree--guides {
      color: $primary-lighten-3;
    }

    &>.tree--guides-hover {
      color: $primary-lighten-3;
    }

    &>.tree--guides-selected {
      color: $primary-lighten-3;
    }
  }
}

/* ID Selectors */

#diagram {
  padding: 0 1 0 1;
  min-width: 76;
}

/* TCSS-Class-name selector */

.file-preview {
  padding-top: 1;
  padding-left: 1;
  border-top: tab $primary-background-lighten-2;
  border-title-align: center;
  border-title-style: bold;
  margin-left: 2;
  margin-right: 1;
  text-style: none;
}

.any-tree {
  border-top: tab $primary-background-lighten-2;
  border-title-align: center;
  border-title-style: bold;
  margin-left: 1;
}

.dir-tree {
  &>.directory-tree--folder {
    color: $primary-lighten-3;
    text-style: none;
  }

  &>.directory-tree--extension {
    text-style: none;
  }

  &>.directory-tree--hidden {
    text-style: none;
  }

  &>.directory-tree--file {
    color: $success-lighten-3;
    text-style: none;
  }
}

/* not in use yet */

.tree-checkbox {
  border: round $accent-muted;

  &>.toggle--label {
    color: $error-darken-2;
  }

  &>.toggle--button {
    color: $error;
  }

  &.-on>.toggle--label {
    color: $success-darken-2;
  }

  &.-on>.toggle--button {
    color: $success;
  }

  &:focus>.toggle--label {
    text-style: none;
  }

  &:focus>.toggle--button {
    text-style: none;
  }

  &:hover>.toggle--label {
    text-style: bold;
  }

  &:hover>.toggle--button {
    text-style: bold;
  }
}
