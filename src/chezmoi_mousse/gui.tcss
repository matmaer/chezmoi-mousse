/****************/
/* tcss classes */
/****************/

.left-vertical {
  width: 1fr;
  margin-right: 2;
}

.right-vertical {
  width: 2fr;
}

.center-content {
  align: center middle;
}

.filter-container {
  dock: bottom;
  align: center middle;
  border-top: inner $background-lighten-1;
  border-bottom: inner $background-lighten-1;
  border-right: inner $background-lighten-1;
  background: $background-lighten-1;
  background-tint: $background-lighten-1;
  height: auto;

  &>.filter-label {
    padding-right: 1;
  }

  .switch--slider {
    color: $error-darken-3;

  }

  .filter-switch {
    border: none;
    background: $background-lighten-1;
    background-tint: $background-lighten-1;

    &.-on .switch--slider {
      color: $success-darken-1;
    }

    &:hover {
      &>.switch--slider {
        color: $error;
      }

      &.-on>.switch--slider {
        color: $success-lighten-2;
      }
    }
  }
}

.doctor-modal {
  border: round $warning-darken-2;
  margin-bottom: 1;
}

AddTab {
  /* to have a space between the two filters */
  .padding-once {
    padding-bottom: 1;
  }
  /* to show the root path on the left and view path on the right */
  .border-path-title {
    border-top: solid $primary;
    border-title-align: center;
  }
}

AutoWarning {
  height: auto;
  padding: 0 1 0 1;
  margin: 0 1 0 1;
  dock: top;
  text-align: center;
  border-bottom: dashed $panel;
}

ApplyTab, ReAddTab {
  /* for "Tree" vs "Status" switcher */
  #tree_buttons_horizontal {
    height: 2;
    border-left: none;
    border-right: none;
    border-top: none;
    border-bottom: solid $primary;
    border-subtitle-color: $primary;
    border-subtitle-align: center;
    border-subtitle-style: bold;
    width: 1fr;
    max-width: 1fr;
  }
  #re_add_tree {
    width: auto;
}
}

#flow_diagram {
  padding: 0 1 0 1;
  min-width: 80;
}

/******************************************************************/
/* App default TCSS which are different than the textual defaults */
/******************************************************************/

/* todo: avoid "*"" selector */

* {
  background-tint: $background;
  scrollbar-size-vertical: 1;
  scrollbar-background: $background;
  scrollbar-background-active: $background;
  scrollbar-background-hover: $background;
  scrollbar-corner-color: $background;
}


Button {
  border: none;
  height: 1;
  text-style: none;
}

Collapsible {
  border: none;
  padding: 0;
}

CollapsibleTitle {
  color: $primary-lighten-3;
  &:hover {
    text-style: bold;
  }
}

DataTable {
  &>.datatable--header {
    text-style: none;
  }
}

DirectoryTree {
  &>.directory-tree--folder {
    color: $primary-lighten-3;
    text-style: none;
  }

  &>.directory-tree--extension {
    text-style: none;
  }

  &>.directory-tree--hidden {
    text-style: none;
  }

  &>.directory-tree--file {
    color: $success-lighten-3;
    text-style: none;
  }
}

Footer {
  height: 3;
  border-top: dashed $panel;
  border-bottom: hidden;
  .-command-palette {
    border: none;
  }
}

Header {
  border-bottom: dashed $panel-lighten-1;
  color: $primary;
  height: 2;
  text-style: bold;
}

MainScreen {
  layers: command_log;
}

Toast {
  background: $surface;
  background-tint: $surface;
}

RichLog {
  padding-left: 1;
}

Tree {
  &>.tree--cursor {
    text-style: none;
    color: $accent-lighten-3;
  }

  &>.tree--highlight-line {
    text-style: none;
  }

  &>.tree--highlight {
    text-style: bold;
  }

  &>.tree--guides {
    color: $primary-lighten-3;
  }

  &>.tree--guides-hover {
    color: $primary-lighten-3;
  }

  &>.tree--guides-selected {
    color: $primary-lighten-3;
  }

  &:focus {
    &>.tree--guides {
      color: $primary-lighten-3;
    }

    &>.tree--guides-hover {
      color: $primary-lighten-3;
    }

    &>.tree--guides-selected {
      color: $primary-lighten-3;
    }
  }
}


